<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Title>AppSettingsProtector</Title>
        <Authors>Marco Ortali</Authors>
        <Description>A simple library that encrypt specific settings in your appsettings.json file</Description>
        <PackageProjectUrl>https://github.com/MarkWalter94/AppSettingsProtector</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/MarkWalter94/AppSettingsProtector/blob/master/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/MarkWalter94/AppSettingsProtector</RepositoryUrl>
        <RepositoryType>GIT</RepositoryType>
        <PackageTags>Crypto ConnectionStrings Protect DPAPI appsettings</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="8.0.0" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
      <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="8.0.0" />
    </ItemGroup>

</Project>
